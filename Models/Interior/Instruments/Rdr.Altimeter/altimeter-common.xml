                <dep>65</dep>
            </entry>
            <entry>
                <ind>80</ind>
                <dep>86</dep>
            </entry>
            <entry>
                <ind>100</ind>
                <dep>108</dep>
            </entry>
            <entry>
                <ind>150</ind>

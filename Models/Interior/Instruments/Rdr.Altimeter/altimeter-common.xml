<?xml version="1.0"?>
<PropertyList>
    <name>Rdr.Altimeter</name>

    <animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <object-name>glass.001</object-name>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Rdr.Altimetr.mount.face</object-name>
        <object-name>rdr.altimtr.needle</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/WarnLeds</property>
                <value>21</value>
            </greater-than>
        </condition>
        <emission>
            <red>0.8</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>rdr.altimtr.needle</object-name>
        <property>su-27/instrumentation/Rdr.Altimeter/altitude</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>11</dep>
            </entry>
            <entry>
                <ind>20</ind>
                <dep>21</dep>
            </entry>

            <!--<entry><ind>300</ind><dep>75</dep></entry>-->

            <entry>
                <ind>40</ind>
                <dep>73</dep>
            </entry>

<?xml version="1.0"?>

<!-- Индикатор Положения Клиньев - ИПК -->
<!-- 2011, Сергей "Mercenary_Mercury" Салов -->

<PropertyList>

 <name>IPK</name>
 <path>IPK.ac</path>

 <animation>
  <type>material</type>
  <object-name>backface</object-name>
  <object-name>faceC</object-name>
  <object-name>IPK.CL</object-name>
  <object-name>IPK.CR</object-name>
  <object-name>IPK.ML</object-name>
  <object-name>IPK.MR</object-name>
  <emission>
   <red>  0.8</red>
   <green>0.8</green>
   <blue> 0.8</blue>
   <factor-prop>mig29/systems/cockpitlighting/instruments-norm</factor-prop>
  </emission>
 </animation>

 <animation>
  <type>material</type>
  <object-name>screws</object-name>
  <emission>
   <red>  0.8</red>
   <green>0.8</green>
   <blue> 0.8</blue>
   <factor-prop>mig29/systems/cockpitlighting/panel-norm</factor-prop>
  </emission>
 </animation>

 <animation>
  <type>shader</type>
  <shader>chrome</shader>
  <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
  <object-name>glass</object-name>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>IPK.CL</object-name>
  <!--property>fdm/jsbsim/systems/intake/pos-left</property-->
  <property>mig29/instrumentation/IPK/pos-left</property>
  <factor>0.5</factor>
  <step>0.01</step>
<!-- 0-  5, 100 - +105 (110) , ВП - +14 (124) -->
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>IPK.CR</object-name>
  <!--property>fdm/jsbsim/systems/intake/pos-right</property-->
  <property>mig29/instrumentation/IPK/pos-right</property>
  <factor>0.5</factor>
  <step>0.01</step>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>IPK.ML</object-name>
  <property>fdm/jsbsim/systems/intake/command_left</property>
  <factor>0.045</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>IPK.MR</object-name>
  <property>fdm/jsbsim/systems/intake/command_right</property>
  <factor>0.045</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>IPK.KnobL</object-name>
  <property>fdm/jsbsim/systems/intake/command_left</property>
  <factor>360</factor>
  <center>
   <x-m> 0.0100</x-m>
   <y-m>-0.0238</y-m>
   <z-m>-0.0140</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>IPK.KnobR</object-name>
  <property>fdm/jsbsim/systems/intake/command_right</property>
  <factor>360</factor>
  <center>
   <x-m> 0.0100</x-m>
   <y-m> 0.0238</y-m>
   <z-m>-0.0140</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>IPK.cz1</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>true</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>fdm/jsbsim/systems/intake/command_left</property>
    <step>-0.04</step>
    <min>0</min>
    <max>1</max>
   </binding>
  </action>
 </animation>
 <animation>
  <type>pick</type>
  <object-name>IPK.cz2</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>true</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>fdm/jsbsim/systems/intake/command_left</property>
    <step>0.04</step>
    <min>0</min>
    <max>1</max>
   </binding>
  </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>IPK.cz3</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>true</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>fdm/jsbsim/systems/intake/command_right</property>
    <step>-0.04</step>
    <min>0</min>
    <max>1</max>
   </binding>
  </action>
 </animation>
 <animation>
  <type>pick</type>
  <object-name>IPK.cz4</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>true</repeatable>
   <binding>
    <command>property-adjust</command>
    <property>fdm/jsbsim/systems/intake/command_right</property>
    <step>0.04</step>
    <min>0</min>
    <max>1</max>
   </binding>
  </action>
 </animation>

</PropertyList>

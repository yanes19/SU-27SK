 <animation>
  <type>rotate</type>
  <object-name>KPP.Roll</object-name>
  <property>orientation/roll-deg</property>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
  <center>
   <x-m>-0.036</x-m>
   <y-m> 0.0</y-m>
   <z-m> 0.0</z-m>
  </center>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>KPP.PitchAngleScale</object-name>
  <property>/orientation/pitch-deg</property>
  <interpolation>
   <entry><ind>-90.0</ind><dep>-139.21875</dep></entry>
   <entry><ind> 90.0</ind><dep> 139.21875</dep></entry>
  </interpolation>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>-0.06</x-m>
   <y-m> 0.0</y-m>
   <z-m> 0.0</z-m>
  </center>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>KPP.skidball</object-name>
  <condition>
   <not>
    <property>instrumentation/attitude-indicator/caged-flag</property>
   </not>
  </condition>
  <property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
  <interpolation>
   <entry><ind>-2.56</ind><dep>-9.216</dep></entry>
   <entry><ind> 2.56</ind><dep> 9.216</dep></entry>
  </interpolation>
  <center>
   <x-m>0.00</x-m>
   <y-m>0.00</y-m>
   <z-m>0.06</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>KPP.PCK</object-name>
  <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
  <factor>25</factor>
  <center>
   <x-m> 0.000</x-m>
   <y-m> 0.046</y-m>
   <z-m>-0.046</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>KPP.AltitudeDirector</object-name>
  <property>mig29/o/snv</property>
  <factor>0.0155</factor>
  <min>-0.0155</min>
  <max> 0.0155</max>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>KPP.CourseDirector</object-name>
  <property>mig29/instrumentation/KPP/course-director</property>
  <factor>0.0155</factor>
  <min>-0.0155</min>
  <max> 0.0155</max>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>KPP.PitchDirector</object-name>
  <property>mig29/instrumentation/KPP/pitch-director</property>
  <factor>0.028</factor>
  <min>-0.028</min>
  <max> 0.028</max>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>KPP.RollDirector</object-name>
  <property>mig29/instrumentation/KPP/roll-director</property>
  <factor>25</factor>
  <min>-25.0</min>
  <max> 25.0</max>
  <center>
   <x-m> 0.000</x-m>
   <y-m> 0.000</y-m>
   <z-m>-0.033</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>


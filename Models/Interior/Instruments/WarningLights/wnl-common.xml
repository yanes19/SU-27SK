<?xml version="1.0"?>

<PropertyList>
    <name>WarnLights</name>

    <animation>
        <type>material</type>
        <object-name>canopy.led.lit</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/outputs/WarnLeds</property>
                    <value>18</value>
                </greater-than>
                <greater-than>
                    <property>canopy/position-norm</property>
                    <value>0</value>
                </greater-than>
            </and>
        </condition>
        <emission>
            <red>0.5</red>
            <green>1</green>
            <blue>0.5</blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>canopy.led.lit</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/outputs/WarnLeds</property>
                    <value>18</value>
                </greater-than>
                <greater-than>
                    <property>canopy/position-norm</property>
                    <value>0</value>
                </greater-than>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>radarON.led.lit</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/outputs/WarnLeds</property>
                    <value>18</value>
                </greater-than>
                <equals>
                    <property>su-27/instrumentation/N010-radar/emitting</property>
                    <value>1</value>
                </equals>
            </and>
        </condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>radarON.led.lit</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/outputs/WarnLeds</property>
                    <value>18</value>
                </greater-than>
                <equals>
                    <property>su-27/instrumentation/N010-radar/emitting</property>
                    <value>1</value>
                </equals>
            </and>
        </condition>
        <emission>
            <red>0.5</red>
            <green>1</green>
            <blue>0.5</blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>parachute.lit</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/outputs/WarnLeds</property>
                    <value>18</value>
                </greater-than>
                <equals>
                    <property>fdm/jsbsim/fcs/parachute_reef-cmd-norm</property>
                    <value>1</value>
                </equals>
                <not>
                    <equals>
                        <property>fdm/jsbsim/fcs/parachute/drop_cmd</property>
                        <value>1</value>
                    </equals>
                </not>
            </and>
        </condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>parachute.lit</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/outputs/WarnLeds</property>
                    <value>18</value>
                </greater-than>
                <equals>
                    <property>fdm/jsbsim/fcs/parachute_reef-cmd-norm</property>
                    <value>1</value>
                </equals>
                <not>
                    <equals>
                        <property>fdm/jsbsim/fcs/parachute/drop_cmd</property>
                        <value>1</value>
                    </equals>
                </not>
            </and>
        </condition>
        <emission>
            <red>0.5</red>
            <green>1</green>
            <blue>0.5</blue>
        </emission>
    </animation>
</PropertyList>
<?xml version="1.0"?>
<PropertyList>

 <path>flame.ac</path>
 <nopreview/>

 <animation>
   <type>select</type>
   <condition>
		<and>
		<greater-than>
		<property>/controls/engines/engine[1]/throttle</property>
		<value>0.9</value>
		</greater-than>
		<!-- DISABLE IF ALS SHADERS ARE ACTIVE -->
		<equals>
		<property>sim/rendering/shaders/skydome</property>
		<value>0</value>
		</equals>
    <equals>
    <property>/engines/engine/running</property>
    <value>1</value>
    </equals>
		</and>
   </condition>
 </animation>

 <animation>
  <type>scale</type>
  <property>engines/engine[0]/nozzle-pos-norm</property>
  <x-factor>1.2</x-factor>
  <y-factor>1.2</y-factor>
  <z-factor>1.2</z-factor>
 </animation>
 
<animation>
	<type>spin</type>

<property>/engines/engine[0]/n1</property>
	<factor>10.0</factor>
 <center>
  <x-m> 0.0</x-m>
  <y-m> 0.0</y-m>
  <z-m>-0.0</z-m>
 </center>
 <axis>
  <x>-1</x>
  <y>0</y>
  <z>0</z>
 </axis>
</animation>

</PropertyList>

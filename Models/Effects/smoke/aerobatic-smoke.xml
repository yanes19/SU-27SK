<animation> <!--	select animation for Blue aerobatic smoke Pylon7 -->
	<type>select</type>
	<object-name>P7_aerobatic_smoke_blue</object-name>
	<condition>
		<and>
			<equals>
				<property>sim/multiplay/generic/int[0]</property>
				<value>3</value>
			</equals>
			<equals>
				<property>sim/weight[6]/selected</property>
				<value>smoke-blue</value>
			</equals>
			<equals>
				<property>su-27/WCS/pylon7/launch</property>
				<value>true</value>
			</equals>
		</and>
	</condition>
</animation>

